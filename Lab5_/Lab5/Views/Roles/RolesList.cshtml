@model IEnumerable<Lab5.Models.APILab6Models.Roles>

<style>
	.roles-container{
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 40px;
		align-items: center;
		margin: 50px;
	}

	.item{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 30px;
		background-color: #edf6fc;
		border-radius: 30px;
	}

	input{
		border: none;
		padding: 10px 20px;
		width: 30vw;
		background-color: #dfeaf2;
		border-radius: 5px;
		margin-bottom: 20px;
	}

	label{
		margin-bottom: 20px;
		text-transform: uppercase;
		font-weight: bold;
		letter-spacing: 1.2px;
	}

	button{
		background-color: #3b9beb;
		border: none;
		padding: 8px 30px;
		margin-left: 350px;
		border-radius: 10px;
		color: white;
	}

	button:hover {
		background-color: #5191e0;
	}
</style>
<form class="roles-container" method="post">
	@foreach(var role in @Model)
	{
		<div class="item">
			<label for="description">Role description</label>
			<input id="description" name="description" type="text" value="@role.RoleDescription" readonly />
			<button type="submit" asp-action="Details" asp-route-id="@role.RoleCode">Details</button>
		</div>
	}
</form>
